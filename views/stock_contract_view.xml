<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_contract_form" model="ir.ui.view">
        <field name="name">stock.contract.form</field>
        <field name="model">stock.contract</field>
        <field eval="1" name="priority"/>
        <field name="arch" type="xml">
            <form string="Stock Contracts" delete="0">
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1 class="d-flex">
                            <field name="name"/>
                        </h1>
                    </div>
                    <group string="Contract Information" name="contract_info">
                        <group col="2">
                            <field name="product_id"/>
                            <field name="location_id" options="{'no_create': True}"/>
                            <field name="auction"/>
                            <field name="price"/>
                        </group>
                        <group col="2">
                            <field name="amount"/>
                            <field name="total_qty" />
                            <field name="location_dest_id" options="{'no_create': True}"/>
                            <field name="date"/>
                        </group>
                    </group>

                    <group string="Contract Line Information" name="contract_line_info">
                        <group col="2"/>
                        <field name="contract_line_ids" mode="tree,kanban" readonly="1" domain="[('quantity', '!=', 0)]">
                            <tree string="Moves" editable="bottom" delete="false">
                                <field name="product_id" />
                                <field name="product_uom_id" />
                                <field name="location_id" />
                                <field name="quantity" />
                                <field name="company_id" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_contract_tree" model="ir.ui.view">
        <field name="name">stock.contract.tree</field>
        <field name="model">stock.contract</field>
        <field eval="50" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Contracts">
                <field name="name" />
                <field name="product_id"/>
                <field name="auction"/>
                <field name="location_id" />
                <field name="location_dest_id"/>
                <field name="price"/>
                <field name="amount"/>
                <field name="total_qty" />
                <field name="date" />
            </tree>
        </field>
    </record>
    <record id="stock_contract_action" model="ir.actions.act_window">
        <field name="name">Contracts</field>
        <field name="res_model">stock.contract</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No contract found. Let's create from exchange app!
            </p>
        </field>
    </record>

    <menuitem action="stock_contract_action" id="stock_contract_menu" parent="reporting_root_menu" sequence="3" name="Contracts"/>
</odoo>
